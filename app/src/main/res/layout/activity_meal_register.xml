<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context=".MealRegister.MealRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Meal Analysis"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/time_instance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Lunch, 12:40 PM"
            android:textColor="@color/colorSubText"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Calories Consumed till Now: 353 kCal"
            android:textColor="@color/colorSubText"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Last Food Item Consumed : Salad"
            android:textColor="@color/colorSubText"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Macros till Now:"
            android:textColor="@color/colorSubText"
            android:textSize="18sp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/macro_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/upload_meal_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Upload Meal Image"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:id="@+id/meal_pic_layout"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:id="@+id/meal_image_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetching Labels..."
                android:textSize="18sp"
                android:textColor="@color/colorSubText"
                android:fontFamily="@font/baloo_bhai_regular"
                android:layout_margin="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>