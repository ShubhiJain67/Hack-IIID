<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History.History"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai_regular"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:text="History"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Diseases contracted "
            android:textSize="18sp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:textColor="@color/colorSubText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Thyroid"
               android:padding="8dp"
               android:layout_margin="8dp"
               android:fontFamily="@font/baloo_bhai_regular"
               android:background="@drawable/disease_chip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hyper Tension"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:fontFamily="@font/baloo_bhai_regular"
                android:background="@drawable/disease_chip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Migraine"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:fontFamily="@font/baloo_bhai_regular"
                android:background="@drawable/disease_chip"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Allergies Contracted "
            android:textSize="18sp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:textColor="@color/colorSubText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lactose"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:fontFamily="@font/baloo_bhai_regular"
                android:background="@drawable/disease_chip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peanuts"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:fontFamily="@font/baloo_bhai_regular"
                android:background="@drawable/disease_chip"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Document Keywords"
            android:textColor="@color/colorSubText"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/upload_doc_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/baloo_bhai_regular"
            android:text="Upload Doc. Images"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:id="@+id/doc_pic_layout"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="8dp"
                android:id="@+id/doc_image_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetching Labels..."
                android:textSize="18sp"
                android:id="@+id/doc_image_label"
                android:textColor="@color/colorSubText"
                android:fontFamily="@font/baloo_bhai_regular"
                android:layout_margin="8dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>